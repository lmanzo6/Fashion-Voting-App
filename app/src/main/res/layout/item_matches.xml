<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20sp">

    <ImageView
        android:id="@+id/MatchImage"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="20sp">

        <TextView
            android:id="@+id/MatchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matches Name"
            android:paddingBottom="20sp"/>

        <TextView
            android:id="@+id/Timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/MatchName"
            android:layout_toEndOf="@id/MatchName"
            android:paddingLeft="10dp"
            android:text="hi"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/LatestMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MatchName"
            android:text="Match Message"/>

        <TextView
            android:id="@+id/Matchid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LatestMessage"
            android:text="Matches ID"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
